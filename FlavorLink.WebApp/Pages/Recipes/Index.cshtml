@page
@model FlavorLink.WebApp.Pages.IndexModel
@{
	ViewData["Title"] = "Recipes";
}

<h1>Recipes</h1>
<form method="get">
	<div class="input-group">
		<input class="form-control" asp-for="SearchTerm" />
		<div class="input-group-append">
			<button type="submit" class="btn btn-primary">Search</button>
		</div>
	</div>
</form>
<div class="card-group">
	@foreach (var recipe in Model.Recipes)
	{
		var photoPath = "~/images/" + (recipe.ImagePath ?? "no-image.jpg");
			
		<!--var photoPath = "~/images/" + (recipe.ImagePath != null ? recipe.ImagePath : "no-image.jpg");-->

		<div class="m-3" style="min-width: 18rem; max-width: 30.5%;">
			<div class="card-header">
				<h3>@recipe.Name</h3>
			</div>

			<img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />

			<div class="card-footer">
				<a asp-page="/Recipes/Details" asp-route-ID="@recipe.Id" class="btn btn-primary m-1">View</a>
				<a asp-page="/Recipes/Edit" asp-route-ID="@recipe.Id" class="btn btn-primary m-1">Edit</a>
				<a asp-page="/Recipes/Delete" asp-route-ID="@recipe.Id" class="btn btn-primary m-1">Delete</a>
			</div>

		</div>
	}
</div>
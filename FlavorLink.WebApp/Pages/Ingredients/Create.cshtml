function updateIngredientDropdownButton(value){
		document.getElementById("ingredientDropdownButton").textContent = value;
		document.getElementById("IngredientId").value = id;
	}
	function updateMeasurementDropdownButton(value) {
		document.getElementById("measurementDropdownButton").textContent = value;
		document.getElementById("MeasurementId").value = id;
	}
	function updateQuantityDropdownButton(value) {
		document.getElementById("quantityDropdownButton").textContent = value;
		document.getElementById("Quantity").value = value;
	}
</script>

